#!/bin/bash

function error() {
	echo "ERROR: $1" 1>&2
	if [[ $2 =~ ^[0-9]+$ ]]; then
		exit $2
	fi
}

__CC_ENABLE_COLORS=1

function enable_colors() {
	__CC_ENABLE_COLORS=1
}

function disable_colors() {
	__CC_ENABLE_COLORS=0
}

if [ $(basename -- $0) == "console-colors" ]; then
	error "Please, source this file instead of executing it." 1
fi
